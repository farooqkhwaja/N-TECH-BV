<%- include('../partials/header', { title: title, currentPage: currentPage }) %>

<!-- Page Header -->
<section class="hero" style="
  padding: 3rem 2rem;
  background: linear-gradient(rgba(44, 95, 125, 0.85), rgba(91, 164, 184, 0.85)), 
  url('https://images.unsplash.com/photo-1590856029826-c7a73142bbf1?w=1600&q=80') center/cover;
">
  <div class="hero-container">
    <h1>Ons Portfolio</h1>
    <p>Projecten waar wij trots op zijn</p>
  </div>
</section>

<!-- Portfolio Grid -->
<section class="section section-light">
  <div class="container">
    <h2 class="section-title">Onze Projecten</h2>
    <p style="text-align: center; margin-bottom: 3rem; font-size: 1.1rem; color: var(--text-medium);">
      Binnenkort meer projecten beschikbaar
    </p>
    
    <div class="cards-grid">
      <% projects.forEach(project => { %>
        <div class="card">
          <div style="
            width: 100%; 
            height: 200px; 
            background: var(--metal-gradient); 
            border-radius: var(--radius-md); 
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--neutral-white);
          ">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="3" width="18" height="18" rx="2"/>
              <path d="M3 9h18M9 21V9"/>
            </svg>
          </div>
          <h3><%= project.title %></h3>
          <p><%= project.description %></p>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- Project Types -->
<section class="section section-dark">
  <div class="container">
    <h2 class="section-title">Type Projecten</h2>
    <div class="company-info">
      <div class="info-box">
        <h3>Montage Projecten</h3>
        <p>
          Industriële montage van metaalconstructies, machines en installaties 
          met precisie en vakmanschap.
        </p>
      </div>
      <div class="info-box">
        <h3>Metaalbewerking</h3>
        <p>
          Professionele metaalbewerking voor diverse toepassingen in de 
          industrie en bouwsector.
        </p>
      </div>
      <div class="info-box">
        <h3>Bouwprojecten</h3>
        <p>
          Levering en montage van metaalconstructies en industriële 
          componenten voor bouwprojecten.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Testimonials Placeholder -->
<section class="section section-light">
  <div class="container">
    <h2 class="section-title">Wat Onze Klanten Zeggen</h2>
    <div style="max-width: 800px; margin: 0 auto; text-align: center;">
      <div class="info-box">
        <p style="font-style: italic; font-size: 1.1rem; line-height: 1.8;">
          "Professioneel werk en betrouwbare samenwerking. N-TECH levert 
          altijd wat ze beloven."
        </p>
        <p style="margin-top: 1rem; font-weight: 600; color: var(--primary-blue);">
          - Klant testimonials komen binnenkort
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="section section-dark">
  <div class="container" style="text-align: center;">
    <h2 class="section-title">Wilt U Ook In Ons Portfolio?</h2>
    <p style="font-size: 1.1rem; margin-bottom: 2rem;">
      Neem contact met ons op en laten we samen bouwen aan uw project.
    </p>
    <a href="/contact" class="btn btn-primary">Start Uw Project</a>
  </div>
</section>

<%- include('../partials/footer') %>
