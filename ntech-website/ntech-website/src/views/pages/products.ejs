<!-- Page Header -->
<section class="hero" style="
  padding: 3rem 2rem;
  background: linear-gradient(rgba(44, 95, 125, 0.85), rgba(91, 164, 184, 0.85)), 
  url('https://images.unsplash.com/photo-1565514020179-026b92b84bb6?w=1600&q=80') center/cover;
">
  <div class="hero-container">
    <h1>Onze Producten</h1>
    <p>Op maat geleverd voor industriële toepassingen</p>
  </div>
</section>

<!-- Products Content -->
<section class="section section-light">
  <div class="container">
    <div style="max-width: 800px; margin: 0 auto; text-align: center;">
      <h2 class="section-title">Producten op Maat</h2>
      <p style="font-size: 1.1rem; line-height: 1.8; margin-bottom: 2rem;">
        Onze producten worden op maat geleverd voor industriële toepassingen. 
        Wij werken nauw samen met onze klanten om de juiste oplossingen te vinden 
        voor hun specifieke behoeften in de metaalindustrie en bouwsector.
      </p>
      
      <div class="info-box" style="text-align: left; margin-top: 3rem;">
        <h3>Productcategorieën</h3>
        <p>
          Wij bieden een breed scala aan metaalproducten en industriële oplossingen:
        </p>
        <ul style="margin-left: 1.5rem; margin-top: 1rem; line-height: 2;">
          <li>Metaalconstructies</li>
          <li>Industriële montage-onderdelen</li>
          <li>Bouwsector componenten</li>
          <li>Op maat gemaakte staalwerken</li>
        </ul>
      </div>
      
      <div class="info-box" style="text-align: left; margin-top: 2rem;">
        <h3>Meer Informatie</h3>
        <p>
          Voor meer informatie over onze specifieke producten en maatwerk mogelijkheden, 
          neem contact met ons op. Wij bespreken graag uw wensen en mogelijkheden.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="section section-dark">
  <div class="container" style="text-align: center;">
    <h2 class="section-title">Interesse in Onze Producten?</h2>
    <p style="font-size: 1.1rem; margin-bottom: 2rem;">
      Neem contact met ons op voor meer informatie en maatwerk oplossingen.
    </p>
    <a href="/contact" class="btn btn-primary">Neem Contact Op</a>
  </div>
</section>

